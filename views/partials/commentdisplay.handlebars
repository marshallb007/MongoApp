
<link rel="stylesheet" href="css/commentdisplay.css"> 

<div class="container commentpanel">
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="panel panel-white post panel-shadow">
                <div class="post-heading">
                    <div class="pull-left image">
                        <img src="data:image/jpeg;base64," class="img-circle avatar" alt="user profile image">
                    </div>
                    <div class="pull-left meta">
                        <div class="title h5">
                            <p><strong>{{this.username}}</strong>
                            made a post.</p>
                        </div>
                        <h6 class="text-muted time">{{this.datestamp}}</h6>
                    </div>
                </div> 
                <div class="post-description"> 
                    <p>{{this.comment}}</p>
                    <div class="stats">

                        <button href="#" data-id="{{this._id}}" class="btn btn-danger stat-item commentdelete">
                            <i class="fa fa-cog"></i>&nbsp Delete Comment
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
